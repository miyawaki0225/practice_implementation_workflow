<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapperとxmlのマッピング -->
<mapper namespace="com.example.repository.SampleMapper">

  <!-- マッピング定義(ユーザー) -->
  <resultMap type="com.example.domain.sample.model.Sample" id="sample">
    <id column="sample_id" property="sampleId" />
    <result column="sample_text" property="sampleText" />
  </resultMap>
  
  <!-- 情報取得 -->
  <select id="findOne" resultType="Sample">
    select * from workflow.sample limit 1
  </select>
</mapper>